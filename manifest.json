{
	"name": "Future Prank",
	"version": "1.0",
	"description": "April Fools Forever",
	"permissions": ["storage", "activeTab"],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"manifest_version": 2
}
